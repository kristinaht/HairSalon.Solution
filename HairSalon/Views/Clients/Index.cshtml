@{
  Layout = "_Layout";
}


@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<div class="flip-card" style="width: 500px">
  <div class="h1">
    <h1>Clients</h1>
  </div>

    @if (@Model.Count == 0)
    {
      <h3>No clients added yet</h3>
    }
    
    @foreach (Client client in Model)
    {
      <h3>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) </h3>
    }
    <br/>
    <button>@Html.ActionLink("Add new client", "Create")</button>
</div>
