@{
  Layout = "_Layout";
}


@using HairSalon.Models;
@model HairSalon.Models.Stylist;

<h2>Stylist Details</h2>
<h3>@Html.DisplayNameFor(model => model.Specialty) : @Html.DisplayFor(model => model.Specialty)</h3>

<ul>
  @if (@Model.Clients.Count == 0)
  {
    <li>No clients found</li>
  }

  @foreach(Client client in Model.Clients)
  {
    <li>Client: @client.Name</li>
  }
</ul>

<p>@Html.ActionLink("Back to Stylists", "Index")</p>
<p>@Html.ActionLink("Edit", "Edit", new {id = Model.StylistId })</p>
<p>@Html.ActionLink("Add a client", "Create", "Clients")</p>


