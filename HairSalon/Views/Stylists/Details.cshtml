@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist;

<div class="flip-card" style="width: 500px;">
  <div class="flip-card-inner">
    <div class="flip-card-front">
      <h2>Stylist Details</h2>
      <h3>@Html.DisplayNameFor(model => model.Name) : @Html.DisplayFor(model => model.Name)</h3>
      <h3>@Html.DisplayNameFor(model => model.Specialty) : @Html.DisplayFor(model => model.Specialty)</h3>
    </div>
    <div class="flip-card-back">
      <h2>Existing Clients for this Stylist:</h2>
      <ul>
        @if (@Model.Clients.Count == 0)
        {
          <li><h4>No clients found</h4></li>
        }
        else
        {
          <ul>
          @foreach(var join in Model.Clients)
          {  
            <li>@join.Client.Name</li>
          }
          </ul>
        }
      </ul>
    </div>
  </div>  
  <button class="btn">@Html.ActionLink("Back to Stylists", "Index")</button>
  <button class="btn">@Html.ActionLink("Edit", "Edit", new {id = Model.StylistId })</button>
  <button class="btn">@Html.ActionLink("Delete", "Delete", new {id = Model.StylistId })</button>
  <button class="btn">@Html.ActionLink("Add a client", "Create", "Clients")</button>
</div>


