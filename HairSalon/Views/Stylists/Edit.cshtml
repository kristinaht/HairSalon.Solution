@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<div class="flip-card" style="width: 500px">
  <h2>Edit</h2>

  <h3>Edit information for: @Html.DisplayFor(model => model.Name)</h3>
  <br/>
  <br/>
  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.StylistId)

    @Html.TextBoxFor(model => model.Name, null, new { @class="text-box", required="required"})
    <br>

    @Html.TextBoxFor(model => model.Specialty, null, new { @class="text-box"})
    <br/>
    <input type = "submit" class="btn" value = "Save" />
  }
  <br/>
  <button class="button">@Html.ActionLink("Back to Stylists", "Index")</button>
</div>